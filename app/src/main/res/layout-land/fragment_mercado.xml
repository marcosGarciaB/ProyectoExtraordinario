<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentMercado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Spinner
            android:id="@+id/spinnerID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btListaSiguiendoID"
            android:backgroundTint="#D5306B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_siguiendo_jugadores"/>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btVentaJugadoresID"
            android:backgroundTint="#E9A63D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_venta_jugadores"/>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</FrameLayout>