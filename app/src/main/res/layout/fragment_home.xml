<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_profesional"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:clipToPadding="false"
            android:scrollbars="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp">

                <VideoView
                    android:id="@+id/videoViewID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <TextView
                android:id="@+id/nombreUsuarioID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nombre_usuario"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <ImageView
                android:id="@+id/imgEscudoHomeID"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fondo"
                android:contentDescription="@string/desc_escudo"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/nombreEquipoHomeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/equipo_predeterminado"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:weightSum="3"
                android:background="@drawable/fondo_reproductor">

                <TextView
                    android:id="@+id/tituloCancionID"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="Título de la canción"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:paddingBottom="12dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/musica"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/anteriorIDHOME"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:src="@drawable/back"
                        android:background="?attr/selectableItemBackgroundBorderless"/>

                    <ImageButton
                        android:id="@+id/playIDHOME"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:src="@drawable/play"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"/>

                    <ImageButton
                        android:id="@+id/siguienteIDHOME"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:src="@drawable/next"
                        android:background="?attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
